@model ImageGallery.Client.ViewModels.GalleryIndexViewModel

<link href="~/css/Index.css" rel="stylesheet" type="text/css" />

<div class="bottomMarginDefault">
</div>

<div class="container">
    <div class="panel-group">
        <div class="panel panel-default">
            <!-- Default panel contents -->
            <div class="panel-heading">Identity token</div>
            <div class="panel-body dont-break-out">
                @this.Model.IdentityToken
            </div>
        </div>

        <div class="panel panel-default">
            <!-- Default panel contents -->
            <div class="panel-heading">Claims</div>
            <!-- List group -->
            <ul class="list-group">
                @foreach (var claim in this.Model.Claims)
                {
                    <li class="list-group-item">@($"Claim type: {claim.Type} - Claim value: {claim.Value}")</li>
                }
            </ul>
        </div>
    </div>

    @foreach (var item in Model.Images)
    {
        <div class="pull-left col-md-4">
            <div>
                <img class="thumbnailImage" src="@("https://localhost:1601/images/" + item.FileName)" />
            </div>
            <div>
                <div class="h5">@item.Title</div>
                <div class="bottomMarginDefault">
                    <a asp-action="EditImage" asp-controller="Gallery" asp-route-id="@item.Id">Edit title</a> |
                    <a asp-action="DeleteImage" asp-controller="Gallery" asp-route-id="@item.Id">Delete image</a>
                </div>
            </div>
        </div>
    }
</div>